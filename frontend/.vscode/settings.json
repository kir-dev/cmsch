{
  "editor.formatOnSave": true,
  "files.encoding": "utf8",
  "search.exclude": {
    "public/**": true,
    "node_modules/**": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
